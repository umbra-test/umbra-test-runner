{
  "name": "umbra-test-runner",
  "description": "Exposes a mechanism for running Umbra tests.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/umbra-test/umbra-test-runner.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && rollup -c",
    "test": "tsc -p tsconfig-tests.json && nyc mocha --require source-map-support/register --recursive lib/tests/tst/**/*.js",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "nyc": {
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "cache": true,
    "check-coverage": true,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "tst",
      "coverage"
    ],
    "reporter": [
      "lcov",
      "html"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.1",
    "@types/sinon": "^7.5.2",
    "@types/sinon-chai": "^3.2.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^7.1.0",
    "mocha-silent-reporter": "^1.0.0",
    "nyc": "next",
    "rollup": "^2.0.6",
    "rollup-plugin-terser": "^5.3.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  }
}
